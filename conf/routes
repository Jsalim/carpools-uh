# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.home()

# Login
GET     /login                      controllers.Application.login()
GET     /login/verify               controllers.Application.loginVerify()
GET     /logout                     controllers.Application.logout()

# Application pages
GET     /app                        controllers.Application.appInterface()
GET     /app/profile                controllers.Application.appProfile()
GET     /app/history                controllers.Application.appHistory()

POST    /app/saveProfile                controllers.Application.saveProfile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
